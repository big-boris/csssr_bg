                            input.practical-skills__item#skills-jquery(name='practical-skills', type='checkbox', value='jQuery', checked='checked')
                            label(for='skills-jquery') jQuery
                            br
                            input.practical-skills__item#skills-grunt(name='practical-skills', type='checkbox', value='Использую GRUNT')
                            label(for='skills-grunt') Использую GRUNT
                            br
                            input.practical-skills__item#skills-haml(name='practical-skills', type='checkbox', value='HAML')
                            label(for='skills-haml') HAML
                            br
